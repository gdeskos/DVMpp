        <frequency val="10" />
        <xmin val="-5.0" />
        <xmax val="25.0" />
        <zmin val="-10.0" />
        <zmax val="10.0" />
        <dx val="0.01" />
        <dz val="0.01" />
        <kernel string="M4prime" />
        <sigma val="0.05" />
        <circ_threshold val="1e-10" />
    </remesh> 
</DVMpp>
