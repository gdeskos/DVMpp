<DVMpp>
    <algorithms>
        <surface_crossing string="DELETE" />
    </algorithms>
	<constants>
		<density val="1.0" />
        <nu val="0.03" />
        <max_Gamma val="1.0" />
        <max_NumPanelVort val="10" />
        <cutoff_exp val="0.675" />
		<seed val="12345" />
    </constants>
	<io>
        <input_dir string="/Users/gdeskos/research_projects/DVMpp/examples/cylinder/" />
        <output_dir string="/Users/gdeskos/research_projects/DVMpp/examples/cylinder/" />
        <domain_file string="bodycoordinatesN40.txt" />
    </io>
    <flow>
        <ux val="10.0" />
        <uz val="0.00" />
    </flow>
    <probe>
        <x val="20" />
        <z val="1" />
    </probe>
